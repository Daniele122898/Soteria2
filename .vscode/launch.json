    "version": "0.2.0",
    "configurations": [
        {
            "name": "SoteriaClient",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/SoteriaClient/SoteriaClient",
            "args": ["${input:command}", "${input:flags}"],
            "cwd": "${workspaceFolder}"
          }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "command",
            "description": "Provide command to run app",
            "default": ""
        },
        {
            "type": "promptString",
            "id": "flags",
            "description": "Provide flag to run app",
            "default": ""
        }
    ]
}